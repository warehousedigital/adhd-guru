<body>
  <h1>âœ… My Fun To-Do List</h1>
  <input type="text" id="taskInput" placeholder="What do you want to achieve today?">
  <button onclick="addTask()">Add to List</button>
  <ul id="taskList"></ul>

  <div id="rewardContainer"></div>

  <script>
    const rewards = [
      "https://placekitten.com/400/300",
      "https://placebear.com/400/300",
      "https://loremflickr.com/400/300/bunny",
      "https://loremflickr.com/400/300/panda",
      "https://loremflickr.com/400/300/duckling"
    ];

    function addTask() {
      const input = document.getElementById('taskInput');
      const value = input.value.trim();
      if (!value) return;

      const li = document.createElement('li');
      const checkbox = document.createElement('input');
      checkbox.type = 'checkbox';
      checkbox.onchange = () => handleComplete(checkbox);

      const span = document.createElement('span');
      span.textContent = value;

      li.appendChild(checkbox);
      li.appendChild(span);
      document.getElementById('taskList').appendChild(li);
      input.value = '';
    }

    function handleComplete(checkbox) {
      if (!checkbox.checked) return;

      const reward = document.createElement('img');
      reward.className = 'reward';
      reward.src = rewards[Math.floor(Math.random() * rewards.length)];

      const rewardContainer = document.getElementById('rewardContainer');
      rewardContainer.innerHTML = '';
      rewardContainer.appendChild(reward);

      // Optional: remove task after 2 seconds
      setTimeout(() => {
        checkbox.parentElement.remove();
      }, 2000);
    }
  </script>
</body>
